[Unit]
Description={{ project_name }} website
After=network.target

[Service]
User={{ ansible_user }}
Group={{ ansible_user }}
WorkingDirectory=/home/{{ ansible_user }}/{{ project_name }}
Environment="PATH=/home/{{ ansible_user }}/{{ project_name }}/venv/bin"
ExecStart=/home/{{ ansible_user }}/{{ project_name }}/venv/bin/gunicorn web.asgi:application -w 4 -k uvicorn.workers.UvicornWorker -b 127.0.0.1:{{ app_port }}
Restart=always

[Install]
WantedBy=multi-user.target 